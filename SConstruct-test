env = Environment(tools=["default"], PLATFORM="")
env.Append(CPPPATH=["src/"])
env.Append(CXXFLAGS=["-std=c++17"])
env.Append(CXXFLAGS=["-g"])
sources = []
sources += Glob("src/game/*.cpp")
sources += Glob("src/game/**/*.cpp")
sources += Glob("src/lib/*.cpp")
sources += Glob("src/lib/**/*.cpp")
sources += Glob("test/*.cpp")
tester = env.Program(
    "tester",
    source=sources,
)
Return("tester")
